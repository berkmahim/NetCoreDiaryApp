@model List<DiaryEntry>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-outline-primary" asp-action="Create" style="margin-bottom: 50px">
                Create New Diary
            </a>
        </div>
        <div class="col-6 text-end">
            Diaeries
        </div>
    </div>
</div>



<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
        <th>Title</th>    
        <th>Content</th>    
        <th>Date</th>    
        <th>Actions</th>  
        </tr>
        </thead>
        
        
        <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Title</td>
                <td>@entry.Content</td>
                <td>@entry.Created</td>
                <td><a asp-controller="DiaryEntries" asp-action="Edit" asp-route-id="@entry.Id" type="button" class="btn btn-outline-primary">Edit</a></td>
                <td>
                    <form asp-controller="DiaryEntries" asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@entry.Id" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </td>            </tr>
 
        }

        </tbody>
    </table>
    
    
    
</div>